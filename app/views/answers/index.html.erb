<h1>Answers</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.question_id %></td>
        <td><%= answer.desc %></td>
        <td><%= link_to 'Questions', questions_path, class: 'answer user questions' %></td>
        <td><%= link_to 'Answers', answers_path, class: 'user answers' %></td>
        <td><%= link_to 'Topics Followed', followings_topics_path, class: 'user topics' %></td>
        <td><%= link_to 'User Follows', followings_path, class: 'user following' %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_answer_path %>
