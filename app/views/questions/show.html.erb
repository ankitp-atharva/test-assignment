<p>
  <strong>Desc:</strong>
  <%= @question.desc %>
</p>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>

<h1>Users:</h1>
<table>
  <thead>
  <tr>
    <th></th>
    <th>Email</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= link_to 'Follow User', follow_user_path(@question, user), class: 'follow_user' %></td>
        <td><%= user.email%></td>
      </tr>
  <% end %>
  </tbody>
</table>

<h1>Topics:</h1>
<table>
  <thead>
  <tr>
    <th>Desc</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @topics.each do |topic| %>
      <tr>
        <td><%= link_to 'Follow Topic', follow_topic_path(@question, topic), class: 'follow_topic' %></td>
        <td><%= topic.desc%></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= render template: 'answers/index' %>